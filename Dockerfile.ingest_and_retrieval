FROM python:3.11-slim

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

WORKDIR /app

# Пинним pip <25, чтобы избежать проблем с проверкой хэшей на тяжёлых пакетах
# (torch и CUDA-зависимости), которые появились в последних базовых образах.
RUN pip install --no-cache-dir "pip<25.0" && \
    pip install --no-cache-dir \
        fastapi \
        uvicorn[standard] \
        pydantic \
        qdrant-client \
        beautifulsoup4 \
        lxml \
        sentence-transformers

RUN pip install --no-cache-dir redis

COPY ingest_and_retrieval ./ingest_and_retrieval
COPY data ./data

ENV EMBEDDING_MODEL_NAME=BAAI/bge-m3 \
    HF_HOME=/hf-cache

CMD ["uvicorn", "ingest_and_retrieval.main:app", "--host", "0.0.0.0", "--port", "8000"]
