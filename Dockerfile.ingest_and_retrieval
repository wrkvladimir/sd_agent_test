FROM python:3.11-slim

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

WORKDIR /app

RUN pip install --no-cache-dir \
    fastapi \
    uvicorn[standard] \
    pydantic \
    qdrant-client \
    beautifulsoup4 \
    lxml \
    sentence-transformers

COPY ingest_and_retrieval ./ingest_and_retrieval
COPY data ./data

ENV EMBEDDING_MODEL_NAME=BAAI/bge-m3 \
    HF_HOME=/hf-cache

CMD ["uvicorn", "ingest_and_retrieval.main:app", "--host", "0.0.0.0", "--port", "8000"]
